<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cehck_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="추가옵션 확인" />

            <TextView
                android:id="@+id/plus_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <EditText
                android:id="@+id/all_atk"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="총 공격력"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/option"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="가상 추가옵션 수치"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/now_atk"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="기본 공격력"
                android:inputType="number"
                android:singleLine="true" />

            <EditText
                android:id="@+id/star_quantity"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="현재 강화수치(별갯수)"
                android:inputType="number"
                android:singleLine="true" />

            <Button
                android:id="@+id/calculation_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="계산 시작하기" />

            <TextView
                android:id="@+id/result_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>